        android:contentDescription="@string/xu_nu_title2"
        android:tag="@string/xu_nu_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/iv_nhan_ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_nhan_ma"
        android:contentDescription="@string/nhan_ma_title2"
        android:tag="@string/nhan_ma_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/iv_su_tu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_su_tu"
        android:contentDescription="@string/su_tu_title2"
        android:tag="@string/su_tu_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/iv_kim_nguu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_kim_nguu"
        android:contentDescription="@string/kim_nguu_title2"
        android:tag="@string/kim_nguu_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="273"
        app:layout_constraintCircleRadius="125dp"
