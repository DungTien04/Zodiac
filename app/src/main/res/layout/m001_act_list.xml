<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg">

    <ProgressBar
        android:id="@+id/iv_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:indeterminateDrawable="@drawable/bg_rotation"
        android:indeterminateDuration="30000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_bg_title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@mipmap/ic_bg_title"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_1"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/iv_bo_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_bocap"
        android:contentDescription="@string/bo_cap_title2"
        android:tag="@string/bo_cap_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/iv_thien_binh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_thien_binh"
        android:contentDescription="@string/thien_binh_title2"
        android:tag="@string/thien_binh_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
