        android:contentDescription="@string/song_ngu_title2"
        android:tag="@string/song_ngu_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/iv_ma_ket"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@mipmap/ic_ma_ket"
        android:contentDescription="@string/ma_ket_title2"
        android:tag="@string/ma_ket_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@id/iv_1"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/iv_bao_binh"
